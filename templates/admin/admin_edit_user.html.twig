{% extends "base.html.twig" %}
{% block title %}

	BACKOFFICE | MODIFICATION DES MEMEBRES
{% endblock %}

{% block body %}

	<h1 class="display-4 text-center my-5">
		BACKOFFICE |MODIFICATION  DES MEMEBRES</h1>
	{# permet d'afficher les erreurs sur la formulaire  #}
	{# <div class="col-md-3 bg bg-bg-danger mx-auto">
					{{form_errors(formUser)}}</div> #}
	{% for message in app.flashes('success') %}

		<div class="col-md-3 bg-success p-4 rounded mx-auto text-center text-white mb-3">{{message}}</div>
	{% endfor %}

	{{form_start(formUser, {'attr': {'class': 'col-md-3 mx-auto'}})}}
	{{form_row(formUser.userName, {'label': "nom utlisateur"})}}
	{{form_row(formUser.email, {'label': "adresse email"})}}
	{{form_row(formUser.roles, {'label': false})}}
	<button type="submit" class="btn btn-secondary">Enregistrer la modification</button>
	{{form_end(formUser)}}


{% endblock %}
