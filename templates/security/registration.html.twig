{% extends "base.html.twig" %}

{% block title %}
	Créer Votre Compte
{% endblock %}
{% block body %}
	<h1 class="display-4 text-center my-5">Créer votre compte...</h1>
	{# formRegistration : variable Twig qui vient de SecurityController --> registration() --> render() qui contient le formulaire d'inscription #}

	{{form_start(formRegistration, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

	{{form_row(formRegistration.userName, {'label': "Nom d'utlisateur"})}}
	{{form_row(formRegistration.email)}}
	{{form_row(formRegistration.password, {'label': "Mot de passe"})}}
	{{form_row(formRegistration.confirm_password, {'label': "Confirmer votre mot de passe"})}}

	<button type="submit" class="btn btn-secondary">Continuer</button>
	{{form_end(formRegistration)}}
{% endblock %}
