{% extends 'base.html.twig' %}

{% block title %}Listes des articles{% endblock %}

{% block body %}
<h1 class="display-4 text-center my-5">{{title}}</h1>

<div class="album py-5 bg-light">
      <div class="row">
      {% for data in articles %}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="{{data.image}}" alt="">
            <div class="card-body">
            <h4 class="text-center">{{data.title}}</h4>
              <p class="card-text">{{data.content|striptags}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{ path('blog_show', {'id': data.id}) }}" class="btn btn-sm btn-outline-secondary">Lirer la suite</a>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Modifier</button>
                </div>
                {# La bdd renvoi un objet issue de la classe DateTime, on ne peut la convertir en une chaine de caractère #}
                {# On utilise donc un filtre Twig : date() #}

                <small class="text-muted">{{data.createdAt|date("m/d/Y")}} à {{data.createdAt|date("H:i:s")}}</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
     
</div>

{% endblock %}
