{% extends "base.html.twig" %}

{% block title %}
Détail de l'article

{% endblock %}

{% block body %}
<h1 class="display-4 text-center my-5"> {{articleTwig.title}}</h1>

<div class="album py-5 bg-light">

    <div class="row">
        <div class="col-md-8 mx-auto">
          <div class="card mb-4 shadow-sm">
           <img src="{{articleTwig.image|replace({'600/400': '1000/300'})}}" alt="{{articleTwig.title}}">

            <div class="card-body">
              <p class="card-text">{{articleTwig.content|striptags}}</p>
              <div class="d-flex justify-content-between align-items-end">
             
                <small class="text-muted">Posté le {{articleTwig.createdAt|date("m/d/Y")}} à {{articleTwig.createdAt|date("H:i:s")}}</small>
              </div>
            </div>
          </div>
        </div>
    </div>

</div>

{% endblock %}